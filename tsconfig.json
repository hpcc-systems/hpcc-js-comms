{
    "compilerOptions": {
        "target": "es5",
        "outDir": "./lib",
        "module": "es6",
        "moduleResolution": "node",
        "importHelpers": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noEmitOnError": false,
        "strictNullChecks": false,
        "sourceMap": true,
        "lib": [
            "es5",
            "es2015.promise",
            "dom"
        ],
        "types": [
            "mocha",
            "chai"
        ]
    },
    "include": [
        "./src/index-node.ts",
        "./src/index-browser.ts"
    ],
    "compileOnSave": true
}